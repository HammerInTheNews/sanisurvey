<h1>Customers</h2>

<p>
  Download to Excel:
  <%= link_to "CSV", customers_path(format: "csv") %>
  <%= link_to "Excel", customers_path(format: "xls") %>
</p>


<table class="table table-striped table-condensed" id="customers">
  <tr>
    <th>Survey</th>
  	<th>Customer Number</th>
   	<th>Restaurant Name</th>
  	<th>Street Address</th>
  	<th>City</th>
  	<th>Postal Code</th>
  	<th>Province</th>
  	<th>Phone</th>
  	<th>Email</th>
  	<th>Contact Name</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= link_to "Survey",[@customer, :surveys] %></td>
  	<td><%= customer.customer_number %></td>
   	<td><%= customer.restaurant_name %></td>
  	<td><%= customer.street_address %></td>
  	<td><%= customer.city %></td>
  	<td><%= customer.postal_code %></td>
  	<td><%= customer.province %></td>
  	<td><%= customer.phone %></td>
  	<td><%= customer.email %></td>
  	<td><%= customer.contact_name %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>  
</table>

<%= form_tag import_customers_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%= link_to 'Back', customers_path %>